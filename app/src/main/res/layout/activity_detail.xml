<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F3F3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_fitness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/eden_fitnesss" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_fitness"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/text_judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A Fitness"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/text_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="Jln. S Parman No. 167" />

                <TextView
                    android:id="@+id/template_fasilitas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15px"
                    android:text="Facility : " />
                <TextView
                    android:id="@+id/text_fasilitas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50px"
                    android:text="Fasilitas" />
                <TextView
                    android:id="@+id/text_harga_perbulan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="100000" />

                <TextView
                    android:id="@+id/text_no_fitnes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="081373517899" />
                <TextView
                    android:id="@+id/text_jam_buka"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="09:00 - 21:00" />


                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book now" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
