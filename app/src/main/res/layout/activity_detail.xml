<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5B9B9">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_fitness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/eden_fitness"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_fitness"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_fitness">

                <TextView
                    android:id="@+id/text_judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A Fitness"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/text_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="Jln. S Parman No. 167" />

                <TextView
                    android:id="@+id/template_fasilitas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15px"
                    android:text="Facility : " />

                <TextView
                    android:id="@+id/text_fasilitas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50px"
                    android:text="Fasilitas" />

                <TextView
                    android:id="@+id/text_harga_perbulan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="100000" />

                <TextView
                    android:id="@+id/text_no_fitnes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="081373517899" />

                <TextView
                    android:id="@+id/text_jam_buka"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="09:00 - 21:00" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book now" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
